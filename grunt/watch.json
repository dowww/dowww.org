{
  "options": {
    "livereload": true
  },
  "railsAssets": {
    "files": "app/assets/**/*.+(scss|css|js|png|jpg|svg)"
  },
  "rubyFiles": {
    "files": "app/**/*.rb"
  },
  "railsLocales": {
    "files": "config/locales/**/*.yml"
  },
  "railsStaticFiles": {
    "files": "public/**/*.+(css|html|js|txt)"
  },
  "railsViews": {
    "files": "app/views/**/*.+(slim|erb)"
  },
  "javascriptFiles": {
    "files": "<%= jshint.all %>",
    "tasks": "jshint"
  }
}
